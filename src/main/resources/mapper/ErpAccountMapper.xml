<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="erp.auth.mapper.ErpAccountMapper">

    <select id="findByUuid" parameterType="string" resultType="ErpAccount">
        SELECT *
        FROM erp_account
        WHERE uuid = #{uuid}
    </select>

    <insert id="saveAccount" parameterType="ErpAccount">
        INSERT INTO erp_account (id, uuid, login_email, login_password, name, role)
        VALUES (erp_account_seq.NEXTVAL,
                #{uuid}, #{loginEmail}, #{loginPassword}, #{name}, #{role})
    </insert>

    <select id="findByEmail" parameterType="string" resultType="ErpAccount">
        SELECT *
        FROM erp_account
        WHERE login_email = #{loginEmail}
    </select>

</mapper>